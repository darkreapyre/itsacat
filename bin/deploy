#!/bin/bash

echo -n "Enter the AWS Region to use > "
read region
#Default should be sagemaker-<<AWS Region>>-722812380636; e.g. sagemaker-us-east-1-722812380636
echo -n "Enter S3 Bucket to host the templates and scripts > "
read bucket
echo -n "Enter CloudFormation stackname to create > "
read stackname
echo -n "Enter GitHub User > "
read GitHubUser
echo -n "Enter GitHubToken > "
read GitHubToken
echo -n "Enter the e-mail address for Pipeline Approval > "
read email

echo ""
echo -n "Building CloudFormation Package ..."
echo ""
zip deploy/templates.zip main.yaml templates/*
cd scripts && zip scripts.zip * && cd ..
mv scripts/scripts.zip deploy/scripts.zip

echo ""
echo -n "Uploading CloudFormation Templates to s3 ..."
echo ""
aws s3 mb "s3://${bucket}" --region $region
aws s3 cp deploy/templates.zip "s3://${bucket}" --acl public-read --region $region
aws s3 cp deploy/scripts.zip "s3://${bucket}" --acl public-read --region $region
aws s3 cp main.yaml "s3://${bucket}" --acl public-read --region $region
aws s3 cp --recursive templates/ "s3://${bucket}/templates" --acl public-read --region $region
aws s3 cp --recursive scripts/ "s3://${bucket}/scripts" --acl public-read --region $region
aws s3api put-bucket-versioning --bucket "${bucket}" --versioning-configuration Status=Enabled --region $region

echo ""
echo -n "Launching CloudFormation Stack ..."
echo ""
aws cloudformation deploy --stack-name $stackname --template-file main.yaml --capabilities CAPABILITY_NAMED_IAM --parameter-overrides TemplateBucket=$bucket GitHubToken=$GitHubToken EmailAddress=$email GitHubUser=$GitHubUser --region $region